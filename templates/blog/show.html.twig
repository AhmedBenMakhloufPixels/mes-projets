
{% extends 'base.html.twig' %}


{% block body %}


<article>
		<h2>{{article.title }}</h2>
			<div class="metadata">
				ercit le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}} dans la catégorie sport
			</div>
			<div class="content">
				<img src="{{article.image}}">
				{{article.content | raw}}
			</div>

			<a href="{{ path('blog_edit',{'id':article.id}) }}" class="btn btn-primary">Update</a>
			<a href="{{ path('blog_delete',{'id':article.id}) }}" class="btn btn-danger">Delete</a>


	</article>

{% endblock %}